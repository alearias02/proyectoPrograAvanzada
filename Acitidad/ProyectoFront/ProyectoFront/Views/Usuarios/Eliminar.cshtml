@model ProyectoFront.Models.UsuarioModel

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2 class="text-danger mb-4 text-center">Eliminar Usuario</h2>

<div class="alert alert-warning">
    <p>¿Está seguro de que desea eliminar este usuario?</p>
</div>

<dl class="row">
    <dt class="col-sm-2">Nombre:</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Tipo:</dt>
    <dd class="col-sm-10">@Model.Tipo</dd>

    <dt class="col-sm-2">Correo:</dt>
    <dd class="col-sm-10">@Model.Correo</dd>
</dl>

<form asp-action="Eliminar" asp-controller="Usuarios" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="text-end">
        <a asp-action="Index" asp-controller="Usuarios" class="btn btn-secondary me-2">Cancelar</a>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Eliminar
        </button>
    </div>
</form>