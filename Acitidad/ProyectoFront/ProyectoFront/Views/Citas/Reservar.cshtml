@model ProyectoFront.Models.CitaModel
@{
    var servicio = ViewBag.Servicio;
}
<h2>Reservar cita para <span style="color:#2a4d69;">@servicio.Nombre</span></h2>

<form asp-action="Reservar" method="post">
    <input type="hidden" asp-for="IdServicio" />

    <label>Nombre completo:</label>
    <input asp-for="NombreDeLaPersona" required />

    <label>Identificación:</label>
    <input asp-for="Identificacion" required />

    <label>Teléfono:</label>
    <input asp-for="Telefono" required />

    <label>Correo:</label>
    <input asp-for="Correo" type="email" required />

    <label>Fecha de nacimiento:</label>
    <input asp-for="FechaNacimiento" type="date" required />

    <label>Dirección:</label>
    <input asp-for="Direccion" required />

    <label>Fecha de la cita:</label>
    <input asp-for="FechaDeLaCita" type="date" required />

    <div style="text-align:center; margin-top:20px;">
        <button type="submit">Reservar</button>
        <a asp-controller="Citas" asp-action="Index">Volver</a>
    </div>
</form>
