@model IEnumerable<ProyectoFront.Models.ServicioModel>

@{
    ViewData["Title"] = "Servicios disponibles";
}

<h2>Servicios disponibles para reservar</h2>

<!-- Buscar cita por ID -->
<div class="mb-3">
    <form asp-action="Buscar" asp-controller="Citas" method="post" class="form-inline">
        <div class="input-group">
            <input type="number" name="id" class="form-control" placeholder="Ingrese el ID de su cita" min="1" required />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Buscar cita</button>
            </div>
        </div>
    </form>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning">@TempData["Mensaje"]</div>
}


<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Especialidad</th>
            <th>Especialista</th>
            <th>Monto</th>
            <th>Clínica</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Nombre</td>
                <td>
                    @(s.Especialidad == 1 ? "Medicina general" :
                                    s.Especialidad == 2 ? "Imagenología" :
                                    "Microbiología")
            </td>
            <td>@s.Especialista</td>
            <td>@s.Monto.ToString("0.00")</td>
            <td>@s.Clinica</td>
            <td>
                <a class="btn btn-success btn-sm" asp-action="Reservar" asp-route-id="@s.Id">Reservar</a>
            </td>
        </tr>
                }
    </tbody>
</table>
