@model ProyectoFront.Models.Reservas

<h2>Reservar cita</h2>
<form asp-action="Reservar" method="post">
    <div class="form-group">
        <label>Usuario</label>
        <select asp-for="IdUsuario" class="form-control" required>
            <option value="">Seleccione un usuario</option>
            @foreach (var u in ViewBag.Usuarios)
            {
                <option value="@u.Id">@u.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Laboratorio</label>
        <select asp-for="IdLaboratorio" class="form-control" required>
            <option value="">Seleccione un laboratorio</option>
            @foreach (var l in ViewBag.Laboratorios)
            {
                <option value="@l.Id">@l.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Fecha de la reserva</label>
        <input asp-for="FechaReserva" type="datetime-local" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Reservar</button>
</form>
