@model IEnumerable<ProyectoFront.Models.CitaModel>
@{
    ViewData["Title"] = "Citas del Servicio";
}

<div class="container mt-4">
    <h2 class="text-primary text-center fw-bold mb-4">
        Citas del servicio: @ViewBag.NombreServicio
    </h2>

    <table class="table table-hover table-bordered shadow-sm rounded">
        <thead class="table-info text-center">
            <tr>
                <th>Persona</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Identificación</th>
                <th>Monto Total</th>
                <th>Fecha Nacimiento</th>
                <th>Fecha Cita</th>
                <th>Fecha Registro</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreDeLaPersona</td>
                    <td>@item.Telefono</td>
                    <td>@item.Correo</td>
                    <td>@item.Identificacion</td>
                    <td>₡@item.MontoTotal</td>
                    <td>@item.FechaNacimiento.ToShortDateString()</td>
                    <td>@item.FechaDeLaCita.ToShortDateString()</td>
                    <td>@item.FechaDeRegistro.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>
