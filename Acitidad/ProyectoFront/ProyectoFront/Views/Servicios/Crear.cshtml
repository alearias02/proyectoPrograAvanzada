@model ProyectoFront.Models.ServicioModel
@{
    ViewData["Title"] = "Registrar Servicio";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Registrar Servicio</h4>
        </div>
        <div class="card-body">
            <form asp-action="Crear" method="post">
                <div class="mb-3">
                    <label class="form-label">Nombre:</label>
                    <input asp-for="Nombre" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción:</label>
                    <input asp-for="Descripcion" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Monto:</label>
                    <input asp-for="Monto" type="number" step="0.01" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">IVA (ej: 0.13):</label>
                    <input asp-for="IVA" type="number" step="0.01" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Especialidad:</label>
                    <select asp-for="Especialidad" class="form-select">
                        <option value="1">Medicina general</option>
                        <option value="2">Imagenología</option>
                        <option value="3">Microbiología</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Especialista:</label>
                    <input asp-for="Especialista" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Clínica:</label>
                    <input asp-for="Clinica" class="form-control" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
