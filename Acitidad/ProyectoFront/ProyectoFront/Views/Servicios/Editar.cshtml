@model ProyectoFront.Models.ServicioModel
@{
    ViewData["Title"] = "Editar Servicio";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Editar Servicio</h4>
        </div>
        <div class="card-body">
            <form asp-action="Editar" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">Nombre:</label>
                    <input asp-for="Nombre" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción:</label>
                    <input asp-for="Descripcion" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Monto:</label>
                    <input asp-for="Monto" type="number" step="0.01" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">IVA:</label>
                    <input asp-for="IVA" type="number" step="0.01" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Especialista:</label>
                    <input asp-for="Especialista" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Clínica:</label>
                    <input asp-for="Clinica" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Estado:</label>
                    <select asp-for="Estado" class="form-select">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning me-2">
                        <i class="bi bi-pencil"></i> Actualizar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
